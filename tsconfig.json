{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    // remove these lines if present:
    // "verbatimModuleSyntax": true,
    // "isolatedModules": true,
    // "jsx": "react-jsx"
  },
  "include": ["src"]
}
